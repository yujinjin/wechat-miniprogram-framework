/* components/parser-html/goods/goods.wxss */
.m-goods-container {
    background: #f2f2f2;
    padding: 20rpx;
    text-indent: 0;
    display: flex;
    align-items: center;
}
.m-goods-container .u-pic {
    flex-shrink: 0;
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
}
.m-goods-container .u-title {
    font-size: 32rpx;
    color: #333;
    line-height: 42rpx;
    height: 84rpx;
    display: webkit-box;
    box-orient: vertical;
    line-clamp: 2;
    overflow: hidden;
    text-overflow:ellipsis;
}
.m-goods-container .u-content {
    position: relative;
    width: 100%;
    height: 140rpx;
}
.m-goods-container .u-price {
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
}
.m-goods-container .u-red {
    color: #fe4c4c;
    font-weight: bold;
    font-size: 32rpx;
}
.m-goods-container .u-btn {
    background: #fe4d4c;
    color: #fff;
    font-size: 28rpx;
    padding: 0 20rpx;
    height: 48rpx;
    border-radius: 6rpx;
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.m-goods-container .u-content-footer {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

