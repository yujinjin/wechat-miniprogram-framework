{
    "name": "wechat-miniprogram-framework",
    "version": "1.0.0",
    "description": "微信小程序框架",
    "scripts": {
        "R_UAT": "node ./build/index.js --env uat --mode 0",
        "B_UAT": "node ./build/index.js --env uat --mode 1",
        "lint": "eslint --fix src/**/*.js"
    },
    "author": "yujinjin9@126.com",
    "dependencies": {
        "@vant/weapp": "^1.6.4"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "decache": "^4.6.0",
        "del": "^6.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "fs-extra": "^9.0.1",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-cache": "^1.1.3",
        "gulp-eslint": "^6.0.0",
        "gulp-imagemin": "^7.1.0",
        "gulp-json-editor": "^2.5.4",
        "gulp-rename": "^2.0.0",
        "gulp-less": "^4.0.1",
        "gulp-postcss": "^9.0.0",
        "wx-px2rpx": "^1.2.2",
        "minimist": "^1.2.5",
        "prettier": "^2.0.4",
        "through2": "^4.0.2",
        "miniprogram-ci": "^1.0.94"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 200,
        "trailingComma": "none",
        "endOfLine": "lf",
        "overrides": [
            {
                "files": [
                    "*.less",
                    "*.scss",
                    "*.wxss",
                    "*.json"
                ],
                "options": {
                    "tabWidth": 4
                }
            },
            {
                "files": [
                    "*.wxml"
                ],
                "options": {
                    "parser": "html",
                    "tabWidth": 4
                }
            }
        ]
    }
}